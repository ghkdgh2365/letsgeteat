<div class="container">
  <h4>로그인</h4>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "이메일" %><br />
      <%= f.email_field :email, placeholder:"abc@abc.com", autofocus: true %>
    </div>
  
    <div class="field">
      <%= f.label :password, "비밀번호" %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "로그인 저장" %>
      </div>
    <% end -%>
  
    <div class="actions" style="padding-bottom:10px;">
      <%= f.submit "로그인", :class => 'btn waves-effect waves-light', :style => 'width:100%;background-color:#ee6e73;' %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>